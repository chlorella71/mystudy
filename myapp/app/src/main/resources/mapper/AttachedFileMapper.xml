<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AttachedFileDao">

  <resultMap id="AttachedFileMap" type="AttachedFile">
    <id column="file_no" property="no"/>
    <result column="file_path" property="filePath"/>
    <result column="board_no" property="boardNo"/>
  </resultMap>

  <insert id="add" parameterType="AttachedFile">
    insert into board_files(file_path,board_no)
    values(#{file_path},#{board_no})
  </insert>

  <insert id="addAll" parameterType="list">
    insert into board_files(file_path,board_no)
    values(#{file_path},#{board_no})
    <foreach collection="list" item="item" separator=",">
      (#{item.filePath,#{item.boardNo})
    </foreach>
  </insert>

  <delete id="delete" parameterType="AttachedFile">
    delete from board_files
    where file_no=#{no}
  </delete>

  <delete id="deleteAll" parameterType="AttachedFile">
    delete from board_files
    where board_no=#{boardNo}
  </delete>

  <select id="findAllByBoardNo" resultType="AttachedFile" parameterType="int">
    select
      file_no,
      file_path,
      board_no
    from
      board_files
    where
      board_no=#{boardNo}
    order by
      file_no asc
  </select>

  <select id="findByNo" resultType="AttachedFile" parameterType="int">
    select
      file_no,
      file_path,
      board_no
    from
      board_files
    where
      file_no=#{no}
  </select>
</mapper>